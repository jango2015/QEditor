            </View>
        </LinearLayout>
        
        <LinearLayout 
       	    android:paddingTop="3dp"
      	    android:layout_marginBottom="3dp"
        	android:id="@+id/menu_input_item3"
        	android:layout_width="fill_parent"
            android:visibility="gone"
